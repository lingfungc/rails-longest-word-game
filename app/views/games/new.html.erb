<div class="container">

  <h2>New Longest Word Game</h2>

  <div class="letter-container">
    <% @letters.each do |letter| %>
      <div class="letter-card">
        <h4><%= letter %></h4>
      </div>
    <% end %>
  </div>

  <div class="user-input">

  <%= form_with url: '/score', data: { turbo: false } do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="">
      <%= f.label :answer, 'What\'s your longest word?' %>
      <%= f.text_field :answer %>
    </div>
    <div class="">
      <%= f.submit "Play" %>
    </div>
  <% end %>

  </div>

</div>
